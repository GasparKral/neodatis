<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="14.0" styleClass="menu_filtros" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.accesoadatos.vistas.ControladorFiltros">
   <padding>
      <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
   </padding>
   <children>
      <VBox>
         <children>
            <Label maxWidth="1.7976931348623157E308" text="Código" />
            <Spinner fx:id="codigo" maxWidth="1.7976931348623157E308" />
         </children>
      </VBox>
      <VBox>
         <children>
            <Label maxWidth="1.7976931348623157E308" text="Denominación" />
            <TextField fx:id="denominacion" />
         </children>
      </VBox>
      <VBox>
         <children>
            <Label maxWidth="1.7976931348623157E308" text="Precio Venta al Público" />
            <Spinner fx:id="pvp" maxWidth="1.7976931348623157E308" />
         </children>
      </VBox>
      <VBox>
         <children>
            <Label maxWidth="1.7976931348623157E308" text="Categoría" />
            <ComboBox fx:id="categoria" maxWidth="1.7976931348623157E308" />
         </children>
      </VBox>
      <VBox>
         <children>
            <Label maxWidth="1.7976931348623157E308" text="Unidades Vendidas" />
            <Spinner fx:id="uv" maxWidth="1.7976931348623157E308" />
         </children>
      </VBox>
      <VBox>
         <children>
            <Label maxWidth="1.7976931348623157E308" text="Stock" />
            <Spinner fx:id="stock" maxWidth="1.7976931348623157E308" />
         </children>
      </VBox>
      <VBox alignment="BOTTOM_CENTER" maxHeight="1.7976931348623157E308" VBox.vgrow="ALWAYS">
         <children>
            <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#query" styleClass="opciones" text="Buscar" />
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
      </VBox>
   </children>
   <stylesheets>
      <URL value="@css/estilosGenerales.css" />
      <URL value="@css/filtros.css" />
   </stylesheets>
</VBox>
